<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0277BD</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="ToolbarTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/lightGreen</item>


        <item name="android:textColorPrimary">@color/sky</item>
        <item name="android:popupBackground">@color/sky</item>
        <item name="android:textColor">#000000</item>
        <item name="actionMenuTextColor">#000000</item>
        <item name="android:textColorSecondary">@color/sky</item>

        <item name="selectableItemBackground">?android:selectableItemBackground</item>
    </style>
    <style name="deleteTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/red</item>
    </style>
    <style name="cancleTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/gray</item>
    </style>
    <style name="saveTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/vividGreen</item>
    </style>
    <style name="modifyTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/vividPurple</item>
    </style>
    <style name="sendTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/vividPurple</item>
    </style>
    <style name="okayTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/vividSky</item>
    </style>




</resources>
